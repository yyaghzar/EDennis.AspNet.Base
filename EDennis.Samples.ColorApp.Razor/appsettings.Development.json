{
  "mcp": null,
  "Security": {
    "MockClaimsPrincipals": {
      "Maria": {
        "email": [ "maria@a.test" ],
        "role": ["Admin"],
        "scope": [ "EDennis.Samples.ColorApi.*" ]
      },
      "Darius": {
        "email": [ "darius@b.test" ],
        "role": [ "Readonly" ],
        "scope": [ "EDennis.Samples.ColorApi.*.Get*" ]
      }
    }
  },
  "CachedTransaction": {
    "EnabledForClaims": {
      "email": [ "maria@a.test" ]
    }
  },
  "ApiClients": {
    "RgbApiClient": "https://localhost:44341"
  },
  "ConnectionStrings": {
    "ColorContext": "Server=(localdb)\\MSSQLLocalDB;Database=Color7153f22c4faa4e6e98d9718d0968a82c;Trusted_Connection=True;MultipleActiveResultSets=True;"
  },
  "Logging": {
    "Serilog": {
      "Using": [ "Serilog.Sinks.Console", "Serilog.Sinks.File" ],
      "MinimumLevel": {
        "Default": "Information",
        "Override": {
          "Microsoft": "Warning",
          "System": "Warning",
          "Microsoft.AspNetCore.Authentication": "Information"
        }
      },
      "WriteTo": [
        { "Name": "Console" },
        {
          "Name": "File",
          "Args": { "path": "Logs/log.txt" }
        }
      ],
      "Enrich": [ "FromLogContext", "WithMachineName", "WithThreadId" ],
      "Destructure": [
        {
          "Name": "ToMaximumDepth",
          "Args": { "maximumDestructuringDepth": 4 }
        },
        {
          "Name": "ToMaximumStringLength",
          "Args": { "maximumStringLength": 100 }
        },
        {
          "Name": "ToMaximumCollectionCount",
          "Args": { "maximumCollectionCount": 10 }
        }
      ],
      "Properties": {
        "Application": "EDennis.Samples.ColorApp.Razor"
      }
    }
  }
}
