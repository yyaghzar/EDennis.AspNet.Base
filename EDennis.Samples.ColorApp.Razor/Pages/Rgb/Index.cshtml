@{
    var prevDisabled = !Model.HasPreviousPage ? "disabled" : "";
    var nextDisabled = !Model.HasNextPage ? "disabled" : "";
}

<a asp-page="./Index"
   asp-route-fld0="@Model.SearchTable[0].FieldName"
   asp-route-op0="@Model.SearchTable[0].Operator"
   asp-route-val0="@Model.SearchTable[0].FieldValue"
   asp-route-fld1="@Model.SearchTable[1].FieldName"
   asp-route-op1="@Model.SearchTable[1].Operator"
   asp-route-val1="@Model.SearchTable[1].FieldValue"
   asp-route-pageNumber="@(Model.CurrentPage - 1)"
   asp-route-totalRecords="@Model.RowCount"
   class="btn btn-secondary @prevDisabled">
    Previous
</a>
<a asp-page="./Index"
   asp-route-fld0="@Model.SearchTable[0].FieldName"
   asp-route-op0="@Model.SearchTable[0].Operator"
   asp-route-val0="@Model.SearchTable[0].FieldValue"
   asp-route-fld1="@Model.SearchTable[1].FieldName"
   asp-route-op1="@Model.SearchTable[1].Operator"
   asp-route-val1="@Model.SearchTable[1].FieldValue"
   asp-route-pageNumber="@(Model.CurrentPage + 1)"
   asp-route-totalRecords="@Model.RowCount"
   class="btn btn-secondary @nextDisabled">
    Next
</a>