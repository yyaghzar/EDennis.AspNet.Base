{
  "mcp":  "Maria",
  "Security": {
    "DefaultPolicies": {
      "ClaimTypes": [ "scope" ]
    },
    "MockClaimsPrincipals": {
      "Maria": {
        "email": [ "maria@a.test" ],
        "scope": [ "EDennis.Samples.ColorApi.*" ]
      },
      "Darius": {
        "email": [ "darius@b.test" ],
        "scope": [ "EDennis.Samples.ColorApi.*.Get*" ]
      }
    },
    "ClientCredentials": {
      "Authority": "https://localhost:5000",
      "ClientId": "EDennis.Samples.ColorApi",
      "ClientSecret": "secret",
      "Scopes": [ "EDennis.Samples.ColorApi.Rgb" ]
    },
    "ApiResource": {
      "Name": "EDennis.Samples.ColorApi",
      "Scopes": [
        "EDennis.Samples.ColorApi.*",
        "EDennis.Samples.ColorApi.Rgb"
      ],
      "UserClaims": [ "name", "email", "phone" ]
    },
    "TestUsers": [
      {
        "Email": "maria@a.test",
        "OrganizationName": "DaNite",
        "Roles": [ "Admin" ],
        "Claims": {
          "name": "Maria",
          "phone": [ "888.555.1212" ]
        }
      },
      {
        "Email": "darius@a.test",
        "OrganizationName": "Riteway",
        "Roles": [ "User" ],
        "Claims": {
          "name": "Darius",
          "phone": [ "999.555.1212" ]
        }
      }
    ]
  },
  "CachedTransaction": {
    "EnabledForClaims": {
      "email": [ "maria@a.test" ]
    }
  },
  "ConnectionStrings": {
    "ColorContext": "Server=(localdb)\\MSSQLLocalDB;Database=Color7153f22c4faa4e6e98d9718d0968a82c;Trusted_Connection=True;MultipleActiveResultSets=True;"
  },
  "Logging": {
    "HttpLogging": {
      "ConfigFile": "httpLogging.json"
    },
    "Serilog": {
      "Using": [ "Serilog.Sinks.Console", "Serilog.Sinks.File" ],
      "MinimumLevel": {
        "Default": "Information",
        "Override": {
          "Microsoft": "Information",
          "System": "Information",
          "Microsoft.AspNetCore.Authentication": "Information"
        }
      },
      "WriteTo": [
        { "Name": "Console" },
        {
          "Name": "File",
          "Args": { "path": "Logs/log.txt" }
        }
      ],
      "Enrich": [ "FromLogContext", "WithMachineName", "WithThreadId" ],
      "Destructure": [
        {
          "Name": "ToMaximumDepth",
          "Args": { "maximumDestructuringDepth": 4 }
        },
        {
          "Name": "ToMaximumStringLength",
          "Args": { "maximumStringLength": 100 }
        },
        {
          "Name": "ToMaximumCollectionCount",
          "Args": { "maximumCollectionCount": 10 }
        }
      ],
      "Properties": {
        "Application": "EDennis.Samples.ColorApi"
      }
    }
  }
}
