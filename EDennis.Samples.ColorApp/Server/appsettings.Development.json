{
  "mcp": null,
  "Security": {
    "DefaultPolicies": {
      "ClaimTypes": [ "scope" ]
    },
    "ClientCredentials": {
      "Authority": "https://localhost:5000",
      "ClientId": "EDennis.Samples.ColorApp.Server",
      "ClientSecret": "secret",
      "Scopes": [ "EDennis.Samples.ColorApi.Rgb" ]
    },
    "MockClaimsPrincipals": {
      "Maria": {
        "email": [ "maria@a.test" ],
        "role": [ "Admin" ],
        "scope": [ "EDennis.Samples.ColorApi.*" ]
      },
      "Darius": {
        "email": [ "darius@b.test" ],
        "role": [ "Readonly" ],
        "scope": [ "EDennis.Samples.ColorApi.*.Get*" ]
      }
    }
  },
  "CachedTransaction": {
    "EnabledForClaims": {
      "email": [ "maria@a.test" ]
    }
  },
  "ProxyClients": {
    "RgbClient" : "https://localhost:44336"
  },
  "ConnectionStrings": {
    "DomainIdentityDbContext": "Server=(localdb)\\mssqllocaldb;Database=AspNetIdentityServer;Trusted_Connection=True;MultipleActiveResultSets=true"
  },
  "Logging": {
    "HttpLogging": {
      "ConfigFile": "httpLogging.json"
    },
    "Serilog": {
      "Using": [ "Serilog.Sinks.Console", "Serilog.Sinks.File" ],
      "WriteTo": [
        { "Name": "Console" },
        {
          "Name": "File",
          "Args": { "path": "Logs/log.txt" }
        }
      ]
    }
  },
  "IdentityServer": {
    "Key": {
      "Type": "Development"
    },
    "Clients": {
      "EDennis.Samples.ColorApp.Client": {
        "Profile": "IdentityServerSPA"
      }
    }
  },
  "AllowedHosts": "*"
}
