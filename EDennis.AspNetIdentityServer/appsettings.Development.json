{
  "CentralAdmin": {
    "Email": "greg@example.com"
  },
  "ClaimsPrincipalFactory": {
    "FilterClaimsByCurrentApplication": false
  },
  "DbContexts": {
    "DomainIdentityDbContext": {
      "ConnectionString": "Server=(LocalDb)\\MSSQLLocalDB;Database=AspNetIdentityServer;Trusted_Connection=True;MultipleActiveResultSets=True;"
    },
    "ConfigurationDbContext": {
      "ConnectionString": "Server=(LocalDb)\\MSSQLLocalDB;Database=AspNetIdentityServer;Trusted_Connection=True;MultipleActiveResultSets=True;"
    },
    "PersistedGrantDbContext": {
      "ConnectionString": "Server=(LocalDb)\\MSSQLLocalDB;Database=AspNetIdentityServer;Trusted_Connection=True;MultipleActiveResultSets=True;"
    }
  },
  "Logging": {
    "OidcLogging": {
      "Enabled": true
    },
    "Serilog": {
      "Using": [ "Serilog.Sinks.Console", "Serilog.Sinks.File" ],
      "WriteTo": [
        { "Name": "Console" },
        {
          "Name": "File",
          "Args": { "path": "Logs/log.txt" }
        }
      ]
    }
  }
}
